    <style>
      body {
        background-color: #f8f9fa;
      }
  
      .card {
        width: 1000px;
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
  
      .card-header {
        border-top-left-radius: 15px;
