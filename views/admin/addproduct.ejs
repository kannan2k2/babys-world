      }
  
      .image-preview {
        display: flex;
        flex-wrap: wrap;
        margin-top: 20px;
      }
  
      .image-container {
        position: relative;
        margin-right: 10px;
        margin-bottom: 10px;
      }
  
      .image-preview img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
      }
  
      .image-container .delete-btn {
