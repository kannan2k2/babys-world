<%- include('adminheader') %>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupon Management</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
    }

    .navbar {
      background-color: #5b4e4e;
      margin-bottom: 0;
    }

    .sidebar {
      border-radius: 10px;
      position: fixed;
      left: 5px;
      top: 70px;
      height: calc(100% - 70px);
      width: 250px;
      background-color: #2d2a2a;
      padding-top: 20px;
    }

    .sidebar a {
      padding: 10px 15px;
      text-decoration: none;
      font-size: 18px;
      color: white;
      display: block;
    }

    .sidebar a:hover {
      background-color: #e0cfcf;
      color: #000;
    }

    .container {
      padding-top: 45px;
      padding-left: 270px; /* Adjust padding to match sidebar width */
      max-width: 1460px;
      margin: 0 auto;
    }

    h2 {
      text-align: left;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th,
    td {
      padding: 12px;
      text-align: left;
      border: 1px solid #7f7f7f;
    }

    th {
      background-color: #5a5a5a;
      color: white;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 12px;
    }

    button {
      padding: 8px 12px;
      border: none;
      background-color: #007bff;
      color: white;
      cursor: pointer;
      border-radius: 4px;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="admin" style="color: #adadad; margin-left: 50px;margin-bottom: 30px;" ><h5>Admin Panel</h5></div>
   <a href="/admin/Dashboard">Dashboard</a>
   <a href="/admin/usermanagement">User Management</a>
   <a href="/admin/productmanagement">Product Management</a>
   <a href="/admin/categorymanagement">Category Management</a>
   <a href="/admin/ordermanagement">Order Management</a>
   <a href="/admin/sales-report">Reports</a>
   <a href="/admin/couponsmanagement">Coupens</a>
 </div>
  <!-- Page Content -->
  <div class="container">
    <h2>Coupon Management</h2>
    <div class="mb-3" style="text-align: right;">
      <a href="/admin/addCoupons" class="btn btn-primary">Add Coupon</a>
    </div>
    <table id="couponsTable" class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Coupon Code</th>
          <th scope="col">Discount Percentage</th>
          <th scope="col">Expiry Date</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% coupons.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)); %> 
        <% coupons.forEach((coupon,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= coupon.couponCode %></td>
            <td><%= coupon.discountPercentage %>%</td>
            <td><%= coupon.expiryDate.toISOString().split('T')[0] %></td>
            <td><%= coupon.status === 'active' ? 'Active' : 'Inactive' %></td>
            <td>
                <a href="/admin/activeDactiveCoupon/<%= coupon._id %>"class="btn <%= coupon.status === 'active' ? 'btn-warning' : 'btn-success' %> btn-sm">
                <%= coupon.status === 'active' ? 'Deactivate' : 'Activate' %>
              </a> 
               
               <a href="/admin/deleteCoupon/<%= coupon._id %>" class="btn btn-danger btn-sm">Delete</a>

            </td>
          </tr>
        <% }); %>
      </tbody>
      
    </table>
  </div>

  <!-- jQuery, DataTables, and Bootstrap Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#couponsTable').DataTable();
    });
  </script>
</body>

</html>
