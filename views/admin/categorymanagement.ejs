   <a href="/admin/ordermanagement">Order Management</a>
   <a href="/admin/sales-report">Reports</a>
   <a href="/admin/couponsmanagement">Coupens</a>
 </div>

  <!-- Page Content -->
  <div class="container mt-5">
    <h2>Category Management</h2>

    <!-- Alert for existing category -->
    <div id="alert-category-exists" class="alert alert-warning alert-dismissible fade show" role="alert" style="display: none;">
      <strong>Warning!</strong> Category already exists.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <table id="categoryTable" class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Index</th>
          <th scope="col">Name</th>
          <th scope="col">Offer</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% category.forEach(function(category, index) { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= category.name %></td>
          <td><%= category.discountoffer %></td>
          <td>
            <a href="/admin/editaddcategory/<%= category._id %>" class="btn btn-sm btn-primary">Edit</a>
            <a href="/admin/softdeletecategory/<%= category._id %>" class="btn btn-sm <%= category.isListed ? 'btn-warning' : 'btn-success' %>">
              <%= category.isListed ? 'Soft Delete' : 'Un-Soft Delete' %>
            </a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/admin/addcategory" class="btn btn-success">Add Category</a>
  </div>

  <!-- Bootstrap Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#categoryTable').DataTable();

      // Show alert if category already exists
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('exists') === 'true') {
        $('#alert-category-exists').show();
      }
    });
  </script>
