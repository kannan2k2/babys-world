      padding: 12px;
      text-align: left;
      border: 1px solid #7f7f7f;
    }

    th {
      background-color: #5a5a5a;
      color: white;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 12px;
    }

    .btn-primary, .btn-warning, .btn-success {
      padding: 8px 12px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    .btn-warning:hover {
      background-color: #e0a800;
    }

    .btn-success:hover {
      background-color: #218838;
    }

    .alert-dismissible .close {
      padding: 0.75rem 1.25rem;
      color: inherit;
    }
  </style>
</head>

<body>
