<%- include('header') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            margin-top: 20px;
            background: #f8f9fa;
            font-family: 'Open Sans', sans-serif;
        }

        .wishlist-container {
            padding: 40px 0;
        }

        .wishlist-heading {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }

        .wishlist-table th,
        .wishlist-table td {
            vertical-align: middle;
        }

        .wishlist-table th {
            background-color: #f1f1f1;
            font-weight: bold;
            color: #555;
        }

        .wishlist-table td img {
            width: 100px;
            height: auto;
            object-fit: cover;
        }

        .wishlist-table td {
            font-size: 16px;
            color: #555;
        }

        .wishlist-table .price {
            font-weight: bold;
            color: #28a745;
        }

        .wishlist-table .in-stock {
            font-size: 14px;
            color: #fff;
            background-color: #28a745;
            border-radius: 20px;
            padding: 5px 10px;
            display: inline-block;
        }

        .wishlist-table .btn {
            font-size: 14px;
        }

        .wishlist-table .trash-icon {
            font-size: 20px;
            color: #dc3545;
            cursor: pointer;
        }

        .wishlist-table .trash-icon:hover {
            color: #ff0000;
        }
    </style>
</head>

<body>
    <div class="container wishlist-container">
        <div class="row">
            <div class="col-md-12">
                <div class="wishlist-heading">My Wishlist</div>
                <table class="table wishlist-table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                            <th scope="col">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (wishlist && wishlist.items && wishlist.items.length > 0) { %>
                            <% wishlist.items.forEach((item, index) => { %>
                                <tr>
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-sm-2 hidden-xs">
                                                <% if (item.productId && item.productId.image && item.productId.image.length > 0) { %>
                                                    <img src="/uploads/<%= item.productId.image[0] %>" alt="Product Image"
                                                        class="img-responsive"
                                                        style="max-width: 100px; max-height: 100px;">
                                                <% } else { %>
                                                    <img src="/path/to/default-image.jpg" alt="Default Image"
                                                        class="img-responsive"
                                                        style="max-width: 100px; max-height: 100px;">
                                                <% } %>
                                            </div>
                                            <div class="col-sm-10">
                                                <h4 class="nomargin"><%= item.productId ? item.productId.ProductName : 'Unknown Product' %></h4>
                                                <p><%= item.productId ? item.productId.description : 'No description available.' %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">â‚¹<%= item.productId ? Number(item.productId.price).toLocaleString('en-IN') : 'N/A' %></td>
                                    <td class="actions" data-th="Action" style="width: 137px;">
                                        <% if (item.productId) { %>
                                            <form id="add-to-cart-form-<%= item.productId._id %>" action="/addtocart/<%= item.productId._id %>" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-primary">
                                                    Add to Cart <i class="fas fa-shopping-cart"></i>
                                                </button>
                                            </form> 
                                        <% } else { %>
                                            <button class="btn btn-secondary view-btn" title="View" disabled>
                                                <i class="fa fa-eye me-2"></i> View
                                            </button>
                                        <% } %>
                                    </td>
                                    
                                    
                                    <td class="actions" data-th="Remove">
                                        <% if (item.productId) { %>
                                            <button class="btn btn-danger btn-sm" title="Remove"
                                                onclick="confirmRemove('<%= item.productId._id %>')">
                                                <i class="fa fa-trash-o"></i> Remove
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-danger btn-sm" title="Remove" disabled>
                                                <i class="fa fa-trash-o"></i> Remove
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">
                                    <h2>Wishlist is empty</h2>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('footer') %>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnE/2K5p8hbJ30zVt7NZ/oN6R8Gh6W4"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmRemove(itemId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3cf696",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, remove it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    // If the user confirms, make a POST request to remove the item
                    fetch(`/removefromwishlist/${itemId}`, {
                        method: 'POST'
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Failed to remove item from wishlist');
                        }
                        // Handle success response (e.g., update UI)
                        // For example, you can reload the page or update the wishlist UI
                        location.reload(); // Reload the page after successful removal

                        Swal.fire({
                            text: 'Item removed from wishlist',
                            icon: 'success',
                            timer: 2000
                        });
                    })
                    .catch(error => {
                        // Handle error response (if any)
                        console.error(error);
                        Swal.fire("Error", "Failed to remove item from wishlist!", "error");
                    });
                }
            });
        }
    </script>
</body>

</html>
